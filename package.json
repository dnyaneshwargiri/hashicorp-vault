{
  "name": "hashicorp",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node app.ts",
    "build": "tsc app.ts",
    "bundle": "ncc build app.ts -t -o dist -m",
    "start": "node app.js",
    "postgress:start": "docker-compose --file postgress.docker.compose.yml up -d",
    "docker:build": " chmod +x docker.build.sh && ./docker.build.sh",
    "docker:run": "docker run -p 3000:3000  --network host instagram-post",
    "docker:export": "docker save -o instagram-post.tar instagram-post:latest",
    "docker:deploy": "npx http-server -p 8080 ./",
    "nomad:start": "nomad agent --dev -config=nomad/nomad.hcl",
    "consul:start": "consul agent --dev",
    "vault:start": "vault server -dev -dev-root-token-id=root",
    "vault:login": "export VAULT_ADDR='http://127.0.0.1:8200';vault login root",
    "vault:credential:add": "vault kv put secret/database POSTGRES_HOST='host.docker.internal' POSTGRES_PORT='5432'  POSTGRES_USER='root' POSTGRES_PASSWORD='root' POSTGRES_DB='instagram_post'",
    "nomad:job:run": "nomad job run instagram-post.nomad.hcl",
    "launch": "yarn build; yarn bundle; yarn docker:build; yarn docker:export; yarn docker:deploy"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "json-server": "0.17.4",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/json-server": "^0.14.7",
    "@types/node": "^20.14.9",
    "@vercel/ncc": "^0.38.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  }
}
